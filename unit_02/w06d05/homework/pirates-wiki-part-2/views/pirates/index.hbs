<div class="background">
  <h1 class="header">The Flyest Pirates of Da 7 Cs</h1>
</div>


<ul class="pirateName">
  {{#each pirates}}
    <a class="text-muted" href="/pirates/{{@index}}"><h2>{{name}}</h2></a>
    <div><a href="/pirates/{{@index}}/edit" class="btn btn-warning">Edit</a></div>

    <form class="deleteButton"action="/pirates/{{@index}}?_method=DELETE" method="POST">
        <input type="submit" value="DELETE"/>
    </form>
  {{/each}}
</ul>

<form action="/pirates/new">
    <input type="submit" value="Create a New Pirate" />
</form>
