<h1> Famous Pirates </h1>
<ul>
  {{#each pirates}}
    <li>Name: {{name}}</li>
    <div>
      <a href="/pirates/{{@show}}/edit">Edit:</a>
    </div>
    <form action="/pirates/{{@show}}?_method=DELETE" method="POST">
      <input type="submit" value="DELETE"/>
    </form>
  {{/each}}
</ul>

<a class="btn btn-default" href="/pirates/new">Add a New Pirate</a>
